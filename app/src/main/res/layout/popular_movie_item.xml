<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ng.volymat.volymat.ui.DynamicHeightNetworkImageView
            android:scaleType="fitXY"
            android:layout_margin="4dp"
            android:background="#727272"
            android:id="@+id/thumbnail1"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textColor="#212121"
            android:ellipsize="end"
            android:textSize="@dimen/movie_title"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:layout_marginTop="10dp"
           android:layout_toRightOf="@+id/thumbnail1"
            android:id="@+id/movie_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminator"/>

        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textColor="#727272"
            android:id="@+id/genre_id1"
            android:textSize="@dimen/movie_genre"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genre"
           android:layout_toRightOf="@id/thumbnail1"
            android:layout_below="@+id/movie_name1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:fontFamily="sans-serif-condensed"
           android:textColor="@color/colorAccent"
            android:text="VIEW"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail1"
            android:layout_below="@id/genre_id1"
            android:layout_alignParentRight="true"
            android:gravity="end"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>